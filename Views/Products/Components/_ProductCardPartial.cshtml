@using WebShopMVC.Data.Models
@model Product

<div class="col-12 col-sm-6 col-md-4 mb-3">
    <a class="link-underline link-underline-opacity-0" asp-controller="Products" asp-action="GetById" asp-route-id="@Model.Id">
        <div class="card h-100">
            <div class="card-body">
                <p class="card-title fw-bold">@Model.Name</p>
                <p class="card-text">
                    @if (Model.Description is not null)
                    {
                        <text>@Model.Description</text>
                    }
                    else
                    {
                        <i class="text-secondary">Description is empty...</i>
                    }
                </p>
                <div class="container-fluid px-0 d-flex flex-row-reverse">
                    <span class="fs-5">@Model.Price</span>
                </div>
            </div>
        </div>
    </a>
</div>